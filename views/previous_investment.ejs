<html>
    <head>
        <title><%= title%></title>
        <meta name="viewport" content="width=device-width, initial-scale=1" charset="utf-8">
        <base href="/">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="<%= assetPath('/css/home.css')%>">
        <link rel="stylesheet" href="<%= assetPath('/css/invest.css')%>">
        <link rel="stylesheet" href="<%= assetPath('/css/profile.css')%>">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    </head>
    <body>
        <%- include('_navbar2')%>
        <div id="invested_list" class="table-responsive">
            <ul class="navbar-nav mr-auto">
                <table class="table table-striped table-bordered table-hover table-dark">
                    <tr>
                        <th>Organization</th>
                        <th>Amount</th>
                        <th>Date of Investment</th>
                        <th>Time of Investment</th>
                    </tr>
                <% for(r of record){%>
                    <% if(locals.user && r.user==user.id){%>
                            <tr>
                                <td> 
                                    <%= r.company_name %>
                                </td>
                                <td>
                                    <%= r.invest%>
                                </td>
                                <td>
                                    <%= r.createdAt.toDateString()%>
                                </td>
                                <td>
                                    <%= r.createdAt.toLocaleString().split(',')[1]%>
                                </td>
                                <td id="anchor_td">
                                    <a href="/invest/destroy/<%= r.id%>"><button class="btn btn-primary">Delete Entry</button></a>
                                </td>
                            </tr>
                        
                    <%}%>
                <%}%>
            </ul>
        </div>
    </table>
    </body>
</html>